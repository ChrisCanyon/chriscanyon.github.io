<!DOCTYPE html>
<html>
  <head>
    <title>Bingo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
    <table style="height: 50%; width: 100%; border-style: solid;">
      <tr>
        <td style="text-align: center; border-style: solid;">
          <h1>Drink Log</h1>
        </td>
        <td style="text-align: center; border-style: solid;">
          <h1>Leader Board</h1>
        </td>
      </tr>
      <tr>
        <td style="max-width: 50%">
          <div style="overflow-y: scroll; height: 300px; border-style: solid;">
            <%= render 'drink_log/drink_log' %>
          </div>
        </td>
        <td style="max-width: 50%">
          <div style="overflow-y: scroll; height: 300px; border-style: solid;">
            <%= render 'leader_board/leader_board' %>
          </div>
        </td>
      </tr>
    </table>
  </body>
</html>
